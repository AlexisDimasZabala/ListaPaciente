<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fondo_App"
    tools:context=".Menu">

    <Button
        android:id="@+id/btnMenuActivar"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/Letras_Barra_sup"
        android:text="Activar Paciente"
        android:textColor="@color/Botones_Color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuBuscar"
        app:strokeColor="@color/ColorLetrasAdapter"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnMenuBuscar"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/Letras_Barra_sup"
        android:text="Buscar Paciente"
        android:textColor="@color/Botones_Color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plRegiPacNombre"
        app:strokeColor="@color/ColorLetrasAdapter"
        app:strokeWidth="3dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMenu"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/radius_background"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="?android:attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="PacientAR"
        app:titleMarginStart="50dp"
        app:titleTextAppearance="@style/barra_sup"
        app:titleTextColor="@color/Letras_Barra_sup" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMenu"
        app:srcCompat="@drawable/png_punto_hospital" />

    <TextView
        android:id="@+id/txtLoginPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/tomorrow"
        android:text="Paciente"
        android:textColor="@color/Letras_Destacadas"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/plRegiPacNombre"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/back"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Ingrese el documento"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuNuevo" />

    <Button
        android:id="@+id/btnMenuNuevo"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/Letras_Barra_sup"
        android:text="Nuevo Paciente"
        android:textColor="@color/Botones_Color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLoginPrincipal"
        app:strokeColor="@color/ColorLetrasAdapter"
        app:strokeWidth="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>